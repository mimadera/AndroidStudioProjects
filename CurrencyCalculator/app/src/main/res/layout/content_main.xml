<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/buttonConvert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="238dp" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="238dp" />

    <Spinner
        android:id="@+id/Currency1"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="38dp" />

    <TextView
        android:id="@+id/textViewTransfer"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:text="How much you want to transfer:"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="174dp" />

    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You will get:"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="204dp" />

    <Spinner
        android:id="@+id/Currency2"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="115dp" />

    <TextView
        android:id="@+id/textViewChooseCurrency"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginTop="8dp"
        android:text="Choose currency you have"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="129dp" />

    <TextView
        android:id="@+id/textViewChooseCurrency2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose currency on which you want to transfer"
        tools:layout_editor_absoluteX="55dp"
        tools:layout_editor_absoluteY="79dp" />

    <EditText
        android:id="@+id/editTextTransfer"
        android:layout_width="159dp"
        android:layout_height="18dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="238dp"
        tools:layout_editor_absoluteY="173dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="238dp"
        tools:layout_editor_absoluteY="204dp" />

</android.support.constraint.ConstraintLayout>