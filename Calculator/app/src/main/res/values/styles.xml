<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>



    <style name="Buttons">
        <item name="android:textSize">40sp</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:background">@drawable/buttons</item>
    </style>


    <style name="FunctionalButtons">
        <item name="android:textSize">40sp</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:background">@drawable/functional_buttons</item>
    </style>

    <style name="NumbersButtons">
        <item name="android:textSize">40sp</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:minWidth">80dp</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:background">@drawable/numbers_buttons</item>
    </style>
</resources>
