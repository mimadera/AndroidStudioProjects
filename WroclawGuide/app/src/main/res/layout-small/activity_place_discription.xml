<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/placeDescri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed doe dolor in r"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/logoWroclaw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/belkawroc"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/placeImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/placeDescri"
        android:layout_marginBottom="16dp"
        app:srcCompat="@drawable/krasnal"
        android:visibility="gone"/>

    <Button
        android:id="@+id/navigateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/placeDescri"
        android:layout_marginBottom="-185dp"
        android:drawableBottom="@drawable/navigate"
        android:text="Navigate" />

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/placeDescri"
        android:layout_marginBottom="-146dp"
        android:text="Exit"
        android:visibility="gone"/>
</RelativeLayout>